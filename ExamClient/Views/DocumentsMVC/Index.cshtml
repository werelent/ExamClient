@model IEnumerable<ExamClient.Models.Document>

@{
    ViewData["Title"] = "Index";
}

<form asp-controller="DocumentsMVC" asp-action="Index" method="get">
    <p>
        <input type="text" name="SearchQuery" />
        <input type="submit" value="Search" />
    </p>
</form>
<h1>Documents</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Document_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Document_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Document_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Document_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Document_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
